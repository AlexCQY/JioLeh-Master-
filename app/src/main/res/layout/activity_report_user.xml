<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseBlack"
    tools:context=".userprofile.ReportUserPage">

    <include
        android:id="@+id/report_user_top_bar"
        layout="@layout/user_profile_top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </include>


    <TextView
        android:id="@+id/report_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="What would you like to report about "
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_user_top_bar" />

    <TextView
        android:id="@+id/report_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/report_header"
        android:layout_centerHorizontal="true"
        android:text="username123"
        android:textColor="@color/White"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_header" />

    <EditText
        android:id="@+id/report_words"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@id/report_username"
        android:layout_centerHorizontal="true"
        android:background="@drawable/review_edit_text"
        android:gravity="top|start"
        android:hint="Tell us about what happen."
        android:textColorHint="@color/baseGrey"
        android:paddingLeft="8sp"
        android:paddingTop="8sp"
        android:paddingRight="8sp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_username"
        app:layout_constraintVertical_bias="0.164" />

    <Button
        android:id="@+id/report_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/report_words"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_round_rectangle"
        android:text="Report"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/appBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_words" />

</androidx.constraintlayout.widget.ConstraintLayout>