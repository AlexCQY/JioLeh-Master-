<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_nearBy_JioActivity_image"
        android:layout_centerVertical="true"

        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@color/baseBlack"
        android:layout_marginStart="9sp"
        android:layout_marginLeft="9sp"/>

    <TextView
        android:id="@+id/tv_map_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_toEndOf="@id/iv_nearBy_JioActivity_image"
        android:layout_toRightOf="@+id/iv_nearBy_JioActivity_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TITLE TEST"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_map_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_map_title"
        android:ellipsize="end"
        android:maxLines="10"
        android:text="Date of actvity"
        android:textColor="#000"
        android:textSize="@dimen/_9ssp"
        android:drawablePadding="@dimen/_5ssp"
        android:drawableLeft="@drawable/ic_map_window_info_calendar"
        android:drawableStart="@drawable/ic_map_window_info_calendar"
        android:layout_toEndOf="@+id/iv_nearBy_JioActivity_image"
        android:layout_toRightOf="@+id/iv_nearBy_JioActivity_image"
        android:layout_marginLeft="@dimen/_6ssp"
        android:layout_marginStart="@dimen/_6ssp" />

    <TextView
        android:id="@+id/tv_map_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_map_date"
        android:ellipsize="end"
        android:maxLines="10"
        android:text="Time of Activity"
        android:textColor="#000"
        android:textSize="@dimen/_9ssp"
        android:drawablePadding="@dimen/_5ssp"
        android:drawableLeft="@drawable/ic_map_window_info_time"
        android:drawableStart="@drawable/ic_map_window_info_time"
        android:layout_toEndOf="@+id/iv_nearBy_JioActivity_image"
        android:layout_toRightOf="@+id/iv_nearBy_JioActivity_image"
        android:layout_marginLeft="@dimen/_6ssp"
        android:layout_marginStart="@dimen/_6ssp"/>

    <TextView
        android:gravity="top"
        android:id="@+id/tv_map_location_address"
        android:layout_width="162sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_map_time"
        android:text="Address of location"
        android:textColor="#000"
        android:textSize="@dimen/_9ssp"
        android:ellipsize="end"
        android:maxLines="1"
        android:drawablePadding="@dimen/_5ssp"
        android:drawableLeft="@drawable/ic_map_window_info_location"
        android:drawableStart="@drawable/ic_map_window_info_location"
        android:layout_toEndOf="@+id/iv_nearBy_JioActivity_image"
        android:layout_toRightOf="@+id/iv_nearBy_JioActivity_image"
        android:layout_marginLeft="@dimen/_6ssp"
        android:layout_marginStart="@dimen/_6ssp"/>
    <TextView
        android:id="@+id/map_numberOfParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_map_location_address"
        android:text="0/10"
        android:textColor="#000"
        android:textSize="@dimen/_9ssp"
        android:drawablePadding="@dimen/_5ssp"
        android:drawableLeft="@drawable/ic_map_window_info_participants"
        android:drawableStart="@drawable/ic_map_window_info_participants"
        android:layout_toEndOf="@+id/iv_nearBy_JioActivity_image"
        android:layout_toRightOf="@+id/iv_nearBy_JioActivity_image"
        android:layout_marginLeft="@dimen/_6ssp"
        android:layout_marginStart="@dimen/_6ssp"/>


</RelativeLayout>