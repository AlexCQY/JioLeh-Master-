<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offGreen"
    android:orientation="vertical"
    tools:context=".login.FirstTimeUserPage">
    <!--android:background="#202124"-->


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:background="@color/appBlack">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view"
            android:layout_width="180dp"
            android:layout_height="142dp"
            android:layout_gravity="center"
            android:onClick="addImage"
            android:src="@drawable/default_picture"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <ImageButton
            android:id="@+id/ic_camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="40sp"
            android:background="@drawable/ic_camera_white" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20sp"
        android:background="@drawable/round_text_box">

        <Button
            android:id="@+id/btn_createProfile"
            android:layout_width="172dp"
            android:layout_height="49dp"
            android:layout_below="@+id/bio"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_round_rectangle"
            android:text="Create Profile"
            android:textColor="@color/appGreen"
            android:textStyle="bold" />
    </RelativeLayout>


</LinearLayout>
